<%= simple_form_for @szaki, :html => { :multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Válasz kategóriát!", required: true) %>
  <%= f.input :title, label: "Munka címe: " %>
  <%= f.input :description, label: "Leírás a munkáról: "%>
  <%= f.input :worktype, label: "Munka típusa: " %>
  <%= f.button :submit, 'Létrehozás',  :class => 'btn-custom2' %>
<% end %>